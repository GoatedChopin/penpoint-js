{
  "name": "@penpoint/js",
  "version": "0.1.0",
  "description": "Official TypeScript/JavaScript client library for the Penpoint API",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run clean && npm run build && npm run test && npm run lint",
    "docs": "typedoc src/index.ts --out docs",
    "prepare": "npm run build"
  },
  "keywords": [
    "penpoint",
    "api",
    "client",
    "typescript",
    "javascript",
    "document",
    "reference",
    "search"
  ],
  "author": "Penpoint <support@penpoint.ai>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/penpoint/penpoint-js.git"
  },
  "bugs": {
    "url": "https://github.com/penpoint/penpoint-js/issues"
  },
  "homepage": "https://github.com/penpoint/penpoint-js#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "node-fetch": "^3.3.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "8.40.0",
    "@typescript-eslint/parser": "8.40.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.0.0",
    "eslint-plugin-prettier": "5.5.4",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "tsup": "^7.0.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "node-fetch": "^3.3.0"
  },
  "peerDependenciesMeta": {
    "node-fetch": {
      "optional": true
    }
  }
}
